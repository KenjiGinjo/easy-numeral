{
  "name": "easy-numeral",
  "version": "0.0.2",
  "description": "Format and manipulate numbers.",
  "author": {
    "name": "Kenji Ginjo",
    "email": "kenjiginjo@gmail.com",
    "url": "http://github.com/KenjiGinjo"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KenjiGinjo/easy-numeral"
  },
  "bugs": {
    "url": "https://github.com/KenjiGinjo/easy-numeral/issues"
  },
  "keywords": [
    "numeral",
    "number",
    "format",
    "money",
    "percentage",
    "bytes",
    "currency",
    "bun"
  ],
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "!src/**/*.test.ts",
    "LICENSE",
    "README.md",
    "src",
    "tsconfig.json"
  ],
  "engines": {
    "node": "*"
  },
  "scripts": {
    "commit": "cz",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "simple-git-hooks",
    "release": "release-it",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.21.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/bun": "^1.1.3",
    "commitizen": "^4.3.0",
    "eslint": "9.5.0",
    "lint-staged": "^15.2.7",
    "release-it": "^17.4.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "github": {
      "release": true
    },
    "git": {
      "commitMessage": "chore(release): release version ${version}"
    }
  }
}
